/* components/moresheet/moresheet.wxss */

.page {
  width: 100%;
  height: 100%;
  z-index: 100;
  position: absolute;
  top: 0;
  bottom: 0;
  /* filter: blur(30px);
  transform: scale(2); */
  background: rgba(255, 255, 255, 0.9);
  filter: blur(0);
}

.contentView {
  width: 100%;
  display: flex;
  justify-content: space-between;
  flex-direction: row;
  bottom: 60px;
  position: fixed;
}

.bottomView {
  width: 100%;
  height: 60px;
  display: flex;
  justify-content: center;
  bottom: 0;
  position: fixed;
}

.itemView {
  display: flex;
  justify-content: center;
  align-items: center;
}

.imageTextView {
  width: 80px;
  height: 120px;
}

.itemImage {
  width: 80px;
  height: 80px;
}

.itemText {
  margin-top: 12px;
  background-color: white;
  width: 80px;
  text-align: center;
  font-size: 16px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 16px;
}

.cancelView {
  width: 125px;
  height: 60px;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 1px 0px 0px rgba(238, 238, 238, 1);
}

.image {
  width: 32px;
  height: 32px;
}
