/* pages/components/answerresultssheet/answerresultssheet.wxss */

.answer-result-sheet-page {
  width: 100%;
  height: 100%;
  background-color: white;
  z-index: 80;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.listView {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  padding-bottom: 24px;
}

.listItemView {
  margin-left: 24px;
  margin-top: 24px;
  width: 93px;
  height: 40px;
  background: rgba(255, 255, 255, 1);
  border-radius: 5px;
  border: 1px solid rgba(238, 238, 238, 1);
  display: flex;
  align-items: center;
  justify-content: center;
}

.listItemViewSelectBorder {
  border: 1px solid rgba(51, 51, 51, 1);
}

.listItemViewBorder {
  border: 1px solid rgba(238, 238, 238, 1);
}

.list-text-icon-space {
  margin-right: 10px;
}

.text {
  font-size: 14px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 14px;
}

.icon {
  width: 20px;
  height: 20px;
}

.cancel {
  position: fixed;
  background-color: white;
  bottom: 0;
  height: 60px;
  width: 100%;
  border-top: 1px solid rgba(238, 238, 238, 1);
  display: flex;
  justify-content: center;
  align-items: center;
}

.cancelImage {
  width: 16px;
  height: 16px;
}
