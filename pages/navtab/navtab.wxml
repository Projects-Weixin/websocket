<!--pages/navtab/navtab.wxml-->
<view class="page">
    <view class="navbar_container">
        <view class="navbar">
            <view class='navbar_item_view'>
                <block wx:for='{{navTabs}}' wx:for-item='item' wx:key='*this'>
                    <view id="{{index}}" class="navbar_item {{activeIndex == index ? 'navbar_item_on' : ''}}" bindtap="tabClick">
                      <view class="navbar_title">{{item}}</view>
                    </view>
                </block>
            </view>

            <view class="navbar_slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px);">
            </view>
        </view>
  
        <button class='navbar_barrage' bindtap='barrageClick'>+发弹幕</button>
    </view>

    <view class="tab_panel">
        <view class="tab_content" hidden="{{activeIndex != 0}}">选项一的内容</view>
        <view class="tab_content" hidden="{{activeIndex != 1}}">选项二的内容</view>
        <view class="tab_content" hidden="{{activeIndex != 2}}">选项三的内容</view>
    </view>
</view>