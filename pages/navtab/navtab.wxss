/* pages/navtab/navtab.wxss */

.page {
  width: 100%;
  height: 100%;
}

.navbar_container {
  width: 100%;
  height: 56px;
  box-shadow: 0px 2px 2px 0px rgba(204, 204, 204, 0.5);
}

.navbar {
  width: 100%;
  display: flex;
  height: 53px;
}

.navbar_item {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 53px;
  width: 50%;
  font-size: 16px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 16px;
}

.navbar_item.navbar_item_on {
  color: rgba(153, 153, 153, 1);
}

.navbar_slider {
  content: " ";
  left: 0;
  bottom: 0;
  width: 64px;
  height: 3px;
  background-color: #1aad19;
  transition: transform 0.3s;
}

.navbar_title {
  /* white-space: nowrap; */
}

.study_page {
  margin-top: 2px;
  background-color: blue;
}

.log_page {
  margin-top: 3px;
  background-color: white;
}

.log_navbar_container {
  display: flex;
  top: 0;
  width: 100%;
  height: 56px;
}

.log_navbar {
  display: flex;
  width: 75%;
  align-items: center;
}

.log_navbar_item {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 48px;
  height: 28px;
  margin-left: 24px;
  border-radius:3px;
  font-size: 16px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  line-height:16px;
}

.log_navbar_title {
  /* white-space: nowrap; */
  background: white;
  border-radius: 3px;
  color: #999;
}

.log_navbar_title_selected {
  background: rgba(51, 51, 51, 1);
  color: white;
}

.tab_panel {
  height: 100%;
  padding-top: 10rpx;
  overflow: auto;
}
